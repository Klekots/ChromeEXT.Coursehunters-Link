{
  "name": "Coursehunters Tools",
  "version": "1.1",
  "short_name": "CH Tools",
  "description": "The set of tools for work with Coursehunters",
  "author": "Dmytro Klekots",
  "permissions": ["storage", "bookmarks", "activeTab", "webNavigation", "tabs"],
  "content_scripts":[
    {
      "matches": ["https://coursehunter.net/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action":{
    "default_icon": "./assets/images/ch38.png",
    "default_popup": "popup.html",
    "default_title": "CH Tools"
  },
  "manifest_version": 2,
  "icons": { 
    "16": "./assets/images/ch16.png",
    "19": "./assets/images/ch19.png",
    "38": "./assets/images/ch38.png",
    "48": "./assets/images/ch48.png",
   "128": "./assets/images/ch128.png" 
  }
}